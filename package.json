{
    "name": "riza",
    "version": "1.0.59",
    "description": "Riza Framework",
    "type": "module",
    "main": "src/main.js",
    "bin": {
        "riza": "bin/cli.js"
    },
    "scripts": {
        "test": "echo Ok",
        "requirements": "yarn global add --ignore-optional parcel http-server",
        "deploy": "npm run build && node ./local/deploy.js",
        "commit": "npm run build && node ./local/commit.js",
        "build:cjs": "parcel build --no-cache --target target_cjs src/_export.js --no-source-maps",
        "build:esm": "parcel build --no-cache --target target_esm src/main.js --no-source-maps",
        "build": "npm run build:cjs && npm run build:esm"
    },
    "target_esm": "dist/riza.js",
    "target_cjs": "dist/riza.cjs.js",
    "targets": {
        "target_esm": {
            "isLibrary": true,
            "context": "browser",
            "outputFormat": "esmodule",
            "optimize": true,
            "engines": {
                "browsers": "since 2021-01"
            }
        },
        "target_cjs": {
            "isLibrary": false,
            "engines": {
                "browsers": "since 2021-01"
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rsthn/riza.git"
    },
    "author": "RedStar Technologies",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rsthn/riza/issues"
    },
    "homepage": "https://github.com/rsthn/riza#readme",
    "files": [
        "dist/",
        "src/",
        "bin/",
        "LICENSE",
        "README.md"
    ],
    "dependencies": {
        "@rsthn/rin": "^2.0.36",
        "base-64": "^1.0.0",
        "fs-extra": "^10.0.1",
        "node-fetch": "^2.6.7"
    }
}