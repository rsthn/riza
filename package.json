{
    "name": "riza",
    "version": "1.1.8",
    "description": "Riza Library",
    "type": "module",
    "main": "./dist/riza.m.js",
    "module": "./dist/riza.m.js",
    "global": "./dist/riza.js",
    "bin": {
        "riza": "bin/cli.js"
    },
    "scripts": {
        "test": "echo Ok",
        "commit": "pnpm build && node ./local/commit.js",
        "deploy": "pnpm build && node ./local/deploy.js",
        "build:global": "parcel build --no-cache --target global",
        "build:module": "parcel build --no-cache --target module",
        "build": "pnpm build:module && pnpm build:global"
    },
    "targets": {
        "module": {
            "source": "./src/main.js",
            "optimize": true
        },
        "global": {
            "source": "./src/_main.js",
            "optimize": true,
            "includeNodeModules": true
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rsthn/riza.git"
    },
    "author": "RedStar Technologies",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rsthn/riza/issues"
    },
    "homepage": "https://github.com/rsthn/riza#readme",
    "files": [
        "dist/",
        "bin/cli.js",
        "bin/template/src/",
        "bin/template/.env.development",
        "bin/template/.env.production",
        "bin/template/package.json",
        "LICENSE",
        "README.md"
    ],
    "dependencies": {
        "base-64": "^1.0.0",
        "fs-extra": "^10.1.0",
        "node-fetch": "^2.6.7",
        "rinn": "^2.0.46"
    },
    "devDependencies": {
        "parcel": "^2.6.2"
    }
}