{
    "name": "riza",
    "version": "2.0.3",
    "description": "Riza Library",
    "type": "module",
    "main": "./dist/riza.m.js",
    "module": "./dist/riza.m.js",
    "global": "./dist/riza.js",
    "types": "./dist/riza.d.ts",
    "bin": {
        "riza": "bin/cli.js"
    },
    "scripts": {
        "test": "echo Ok",
        "commit": "pnpm build && node ./scripts/commit.js",
        "deploy": "pnpm build && pnpm tsdoc && node ./scripts/deploy.js",
        "tsdoc": "node ./scripts/tsdoc.js ./src/main.js ./dist/riza.d.ts",
        "build:global": "parcel build --no-cache --target global",
        "build:module": "parcel build --no-cache --target module",
        "build": "pnpm build:module && pnpm build:global"
    },
    "targets": {
        "module": {
            "source": "./src/main.js",
            "optimize": true
        },
        "global": {
            "source": "./src/_main.js",
            "optimize": true,
            "includeNodeModules": true
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rsthn/riza.git"
    },
    "author": "RedStar Technologies",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rsthn/riza/issues"
    },
    "homepage": "https://github.com/rsthn/riza#readme",
    "files": [
        "dist/",
        "bin/",
        "LICENSE",
        "README.md"
    ],
    "dependencies": {
        "base-64": "^1.0.0",
        "fs-extra": "^10.1.0",
        "rinn": "^2.0.47"
    }
}